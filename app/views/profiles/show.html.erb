<link href="https://fonts.googleapis.com/css2?family=Jersey+25&family=Press+Start+2P&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
<div class="contact-wrapper">
  <div class="contact-card">
    <div class="contact-content">
      <div class="info-section contact-body">
        <h1 class="contact-body">Contact <%= @user.first_name %></h1>
        <p><strong><u><%= @user.first_name %> <%= @user.last_name %></u></strong> would love to hear from you! Feel free to reach your booking owner using the information below.</p>
        <ul class="list-unstyled">
          <li><strong>Email:</strong> <%= @user.email %></li>
          <li><strong>Phone:</strong> <%= @user.phone_number %></li>
        </ul>
      </div>
    </div>

    <div class="social-row">
      <%= link_to "Go back to your bookings", bookings_path(current_user), class: "buttonfilter" %>
    </div>
  </div>
</div>
