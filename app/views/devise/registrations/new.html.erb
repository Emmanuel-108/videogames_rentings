<div class="login-page">
  <div class="login-container">
    <h1>Create an Account</h1>

    <%= form_with(model: resource, as: resource_name, url: registration_path(resource_name), html: { class: "login-form" }) do |form| %>

      <% if resource.errors.any? %>
        <div class="errors">
          <h2>Sign Up Error :</h2>
          <ul>
            <% resource.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= form.label :first_name, "First Name" %><br />
        <%= form.text_field :first_name, autofocus: true, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :last_name, "Last Name" %><br />
        <%= form.text_field :last_name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :email, "Email" %><br />
        <%= form.email_field :email, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :password, "Password" %><br />
        <%= form.password_field :password, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :password_confirmation, "Password Confirmation" %><br />
        <%= form.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.submit "Create My Account", class: "login-button" %>
      </div>

      <div class="form-links">
        <%= link_to "Sign In", new_session_path(resource_name) %>
      </div>

    <% end %>
  </div>
</div>
