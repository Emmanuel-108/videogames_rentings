<div class="login-page">
  <div class="login-container">
    <h1>Sign In to Your Account</h1>

    <%= form_with(model: resource, as: resource_name, url: session_path(resource_name), html: { class: "login-form" }) do |form| %>

      <% if resource.errors.any? %>
        <div class="errors">
          <h2>Login Error :</h2>
          <ul>
            <% resource.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= form.label :email, "Email Address" %><br />
        <%= form.email_field :email, autofocus: true, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :password, "Password" %><br />
        <%= form.password_field :password, autocomplete: "current-password", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.submit "Sign In", class: "login-button" %>
      </div>

      <div class="form-links">
        <%= link_to " Forgot Password?", new_password_path(resource_name) %><br />
        <%= link_to "Create an Account", new_registration_path(resource_name) %>
      </div>

    <% end %>
  </div>
</div>
