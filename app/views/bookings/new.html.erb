<div class="page-background">
  <div class="booking-container">
    <h1>Boooking "<%= @videogame.name %>"</h1>

    <% if @booking.errors.any? %>
      <div class="custom-alert">
        <h4>There were some errors with your booking:</h4>
        <ul>
          <% @booking.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>


    <%= form_with(model: [@videogame, @booking], local: true) do |form| %>
      <div class="form-group ">
        <%= form.label :start_time, "Start Date" %>
        <%= form.date_field :start_time, class: "form-control borderedform", min: Date.today %>
      </div>

      <div class="form-group">
        <%= form.label :end_time, "End Date" %>
        <%= form.date_field :end_time, class: "form-control borderedform", min: Date.today %>
      </div>

      <div class="form-actions pb-2">
        <%= form.submit "Confirm Rental", class: "buttonfilter" %>
      </div>
    <% end %>

    <div class="form-actions">
      <%= link_to "Cancel", videogame_path(@videogame), class: "btn-cancel" %>
    </div>
  </div>
</div>
